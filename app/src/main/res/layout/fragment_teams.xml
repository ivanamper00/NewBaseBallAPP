<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.activity.mainFragments.TeamsFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.github.islamkhsh.CardSliderViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/team_fragment_card_slider"
        app:cardSlider_smallScaleFactor="0.9"
        android:layout_marginVertical="10dp"
        app:cardSlider_otherPagesWidth="15dp"
        app:cardSlider_pageMargin="12dp"
        android:layout_gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/no_data_teams"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No Data Available."
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>