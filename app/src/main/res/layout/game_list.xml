<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="0dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/games_fragment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Home"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
<!--        android:background="@drawable/winner_indicator"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/games_fragment_home_team"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:id="@+id/games_fragment_team_name_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="10dp">
<!--        <LinearLayout-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical">-->

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:orientation="vertical">-->

        <!--            </LinearLayout>-->

<!--        </LinearLayout>-->
        <TextView
            android:id="@+id/games_fragment_score_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/timer_font"
            android:gravity="center"
            android:padding="5dp"
            android:text="00"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
<!--        <LinearLayout-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical">-->

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:orientation="vertical">-->

                <TextView
                    android:id="@+id/games_fragment_score_away"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/timer_font"
                    android:gravity="center"
                    android:text="00"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:textColor="#FF0000"
                    android:textSize="24sp"
                    android:textStyle="bold" />
<!--            </LinearLayout>-->
<!--        </LinearLayout>-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="AWAY"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/games_fragment_away_team"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:id="@+id/games_fragment_team_name_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="AWAY"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>